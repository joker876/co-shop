{
  "restoreTerminals.terminals": [
    {
      "splitTerminals": [
        {
          "name": "ng",
          "commands": [
            "cd client"
          ]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "ng serve",
          "commands": ["cd client", "ng serve --port=6021 --host=0.0.0.0"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "server",
          "commands": ["cd server"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "nodemon",
          "commands": ["npm run server"]
        }
      ]
    }
  ]
}
